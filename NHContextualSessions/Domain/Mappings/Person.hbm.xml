<?xml version="1.0"?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   namespace="Domain"
                   assembly="Domain">

  <class name="Person" table="People" lazy="true">
    <id name="Id">
      <column name="Id" />
      <generator class="guid"/>
    </id>

    <property name="FirstName">
      <column name="First_Name" />
    </property>

    <property name="LastName">
      <column name="Last_Name" />
    </property>
  </class>
</hibernate-mapping>
